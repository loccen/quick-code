# 速码网开发环境配置
# 开发环境默认配置，请根据需要修改

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=quick_code
DB_USERNAME=quick_code_user
DB_PASSWORD=quick_code_pass
DB_ROOT_PASSWORD=root_password

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass
REDIS_DATABASE=0

# ===========================================
# MinIO对象存储配置
# ===========================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=quick-code-files

# ===========================================
# 应用配置
# ===========================================
APP_NAME=速码网
APP_ENV=development
APP_DEBUG=true
APP_BASE_URL=http://localhost:8080
APP_FRONTEND_URL=http://localhost:3000
APP_ADMIN_URL=http://localhost:3001

# ===========================================
# 安全配置
# ===========================================
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRE_HOURS=24

# ===========================================
# 业务配置
# ===========================================
POINT_REGISTER_REWARD=100
POINT_UPLOAD_REWARD=100
POINT_DOCKER_BONUS=100
AUTO_APPROVE_PROJECTS=false

# ===========================================
# 前端配置
# ===========================================
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080/ws
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEVTOOLS=true
VITE_DEV_PORT=3000

# ===========================================
# 开发环境特定配置
# ===========================================
DEV_MODE=true
HOT_RELOAD=true
DEBUG_SQL=true
DEBUG_API=true
